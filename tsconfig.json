{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "composite": true,
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "outDir": "./lib",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "jsx": "react",
    "rootDir": "./",
    "declaration": true,
    "declarationDir": "lib"
  },
  "include": ["./src", "./__tests__/mocks/ComponentDiff/*.json"]
}
